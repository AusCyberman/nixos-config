#;${W_BG} ${B_BG}  ${W_BG} ${B_BG}  ${W_BG}    ${NORMAL}$(fg_c $WHITE);${NORMAL}
#|${W_BG}          ${NORMAL}|${NORMAL}
#|${W_BG}${B_FG}  ,   ,   ${NORMAL}|
#|${W_BG}${B_FG}          ${NORMAL}|
#|${W_BG}${B_FG} ,    , , ${NORMAL}|
#|${W_BG}${B_FG}          ${NORMAL}|
#|${W_BG}${B_FG}   , ,  , ${NORMAL}|
